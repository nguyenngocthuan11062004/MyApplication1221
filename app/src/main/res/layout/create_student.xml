<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_add_student.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <EditText
        android:id="@+id/editTextHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:hint="Họ tên" />

    <EditText
        android:id="@+id/editTextMSSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextHoTen"
        android:layout_marginTop="27dp"
        android:hint="MSSV" />


    <EditText
        android:id="@+id/textViewNgaySinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chọn ngày sinh"
        android:layout_below="@+id/editTextMSSV"
        android:layout_marginTop="20dp"
        android:focusable="false"
        android:clickable="true"/>


    <AutoCompleteTextView
        android:id="@+id/autoCompleteProvince"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNgaySinh"
        android:layout_marginTop="24dp"
        android:completionThreshold="1"
        android:hint="Chọn tỉnh thành" />

    <Button
        android:id="@+id/buttonAddStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoCompleteProvince"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="132dp"
        android:text="Thêm sinh viên" />
</RelativeLayout>
